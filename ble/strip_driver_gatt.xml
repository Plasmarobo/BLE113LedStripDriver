<?xml version="1.0" encoding="UTF-8" ?>
<configuration>

    <!-- 1800: org.bluetooth.service.generic_access -->
    <service uuid="1800" id="generic_access">
        <description>Generic Access</description>

        <!-- 2A00: org.bluetooth.characteristic.gap.device_name -->
        <characteristic uuid="2A00" id="c_device_name">
            <description>Device Name</description>
            <properties read="true" const="true" />
            <value length="16" variable_length="true">LED Strip</value>
        </characteristic>

        <!-- 2A01: org.bluetooth.characteristic.gap.appearance -->
        <characteristic uuid="2A01" id="c_appearance">
            <description>Appearance</description>
            <properties read="true" const="true" />
            <value type="hex">0100</value>
        </characteristic>
        
    </service>

    <!-- 180A: org.bluetooth.service.device_information -->
    <service uuid="180A" id="device_information">
        <description>Device Information</description>
    
        <!-- 2A29: org.bluetooth.characteristic.manufacturer_name_string -->
        <characteristic uuid="2A29" id="c_manufacturer_name">
            <description>Manufacturer Name</description>
            <properties read="true" const="true" />
            <value>GearGrin</value>
        </characteristic>

        <!-- 2A24: org.bluetooth.characteristic.model_number_string -->
        <characteristic uuid="2A24" id="c_model_number">
            <description>Model Number</description>
            <properties read="true" const="true" />
            <value>LEDSD-01</value>
        </characteristic>
		
		<characteristic uuid="2A25" id="xgatt_serial_number">
            <description>Serial Number String</description>
            <properties read="true" />
            <value length="17" />
        </characteristic>

        <characteristic uuid="2A27">
            <description>Hardware Revision String</description>
            <properties read="true" const="true" />
            <value>LEDSD-01</value>
        </characteristic>

        <characteristic uuid="2A26">
            <description>Firmware Revision String</description>
            <properties read="true" const="true" />
            <value>0.1.0</value>
        </characteristic>

        <characteristic uuid="2A28">
            <description>Software Revision String</description>
            <properties read="true" const="true" />
            <value>0.1.0</value>
        </characteristic>
    </service>
	
	<service uuid="00766963-6172-6173-6f6c-7574696f6e73">
        <description>Device Control</description>
        <characteristic uuid="01766963-6172-6173-6f6c-7574696f6e73" id="device_reset">
            <description>Device reset</description>
            <properties write_no_response="true" />
            <value length="1" />
        </characteristic>
    </service>

    <!-- custom service for providing and controlling slave behavior -->
    <service uuid="47f1de41-c535-414f-a747-1184246636c6" advertise="true">
        <description>LED Strip Driver Service</description>

        <!-- custom characteristic for acknowledged status and control point -->
        <characteristic uuid="f408b6c7-06c0-4b4a-8493-50bc261ea9e7" id="c_led_data">
            <description>LED RGB Data</description>
            <properties write="true" indicate="true" notify="true"/>
			<!-- 24 bits per LED -->
            <value variable_length="true" length="20" type="user" />
        </characteristic>
		
		<characteristic uuid="f408b6c7-06c0-4b4a-8493-50bc261ea9e8" id="c_led_cmd">
            <description>Strip Driver Command</description>
            <properties write="true" indicate="true" notify="true"/>
			<!-- 24 bits per LED -->
            <value variable_length="true" length="8" type="user" />
        </characteristic>

    </service>
    
    <service uuid="DEADBEEF-CDCD-CDCD-CDCD-CDCDCDCDCDCD">
        <characteristic uuid="DEADBEEF-0000-0000-0000-000000000000" id="xgatt_debug">
            <description>Debugging output</description>
            <properties read="true" notify="true" />
            <value length="20" />
        </characteristic>
    </service>

</configuration>
